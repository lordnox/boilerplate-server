extends layout

block title
  title My Awesome App!

block append css
  link(rel='stylesheet', href='/styles/app.css')

block append top-script

block prepend main
  .container
    include includes/header

    .content

    include includes/footer

block append bottom-script
  script!= bootstrap

  - if (dev)
    script(src='/components/jquery/jquery.js')
    script(src='/components/angular/angular.js')
    script(src='/components/angular-localstorage/localStorageModule.js')

    script(src='/scripts/app.js')
    script(src='/scripts/services/database.js')
    script(src='/scripts/controllers/mainCtrl.js')
  - else
    script(src='/scripts/app/main.js')
